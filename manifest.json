{
  "manifest_version": 3,
  "name": "逐行翻译助手",
  "version": "1.0",
  "description": "选中文本右键翻译",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://api.fanyi.baidu.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["db.js", "content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [{
    "resources": ["review.html"],
    "matches": ["<all_urls>"]
  }]
} 